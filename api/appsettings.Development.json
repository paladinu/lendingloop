{
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "SharedItemsDb",
    "CollectionName": "items"
  },
  "FileStorage": {
    "UploadPath": "uploads/images",
    "MaxFileSizeBytes": 5242880
  },
  "Jwt": {
    "SecretKey": "development-super-secret-jwt-key-that-is-at-least-32-characters-long-for-security",
    "Issuer": "SharedItemsApi",
    "Audience": "SharedItemsClient",
    "ExpirationHours": "24",
    "RequireHttpsMetadata": "false",
    "SaveToken": "true",
    "RequireExpirationTime": "true",
    "ValidateLifetime": "true"
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": "587",
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "noreply@localhost",
    "FromName": "Shared Items App (Development)",
    "BaseUrl": "http://localhost:4200",
    "EnableSsl": "true",
    "UseDefaultCredentials": "false",
    "TimeoutSeconds": "30",
    "MaxRetryAttempts": "3",
    "RetryDelaySeconds": "5",
    "TestMode": "true",
    "TestEmailAddress": "test@localhost.com"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Migration": {
    "AutoRunOnStartup": "false",
    "EnableMigrationEndpoints": "true"
  }
}